{% extends 'layoutAdmin.html.twig' %}
{% block title %} {{ parent() }} | Nos {{ name }}{% endblock %}
{% block content %}
    <h2 class="text-center my-5">Ajouter un Velo</h2>
    <div class="container pb-5">
        <ul class="mt-3 alert alert-danger">
            {%- for error in errors -%}
                <li>{{ error }}</li>
            {%- endfor -%}
        </ul>
        <form action="" method="POST" novalidate>
            <div class="form-group">
                <label for="name">Nom du vélo</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Nom">
            </div>
            <div class="form-group">
                <label for="weight">Poids</label>
                <input type="number" class="form-control" id="weight" name="weight" placeholder="Poids">
            </div>
            <div class="form-group">
                <label for="stock">Nombre de vélo</label>
                <input type="number" class="form-control" id="stock" name="stock"
                       placeholder="Nombre de vélo">
            </div>
            <div class="form-group">
                <label for="category_id">Catégorie</label>
                <select class="form-control" id="category_id" name="category_id">
                    {% for category in categories %}
                        <option{{ category == category.id ? 'selected' }} value="{{ category.id }}">
                            {{ category.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label for="maximum_charge">Charge maximal (optionnel)</label>
                <input type="text" class="form-control" id="maximum_charge" name="maximum_charge"
                       placeholder="Charge maximum">
            </div>
            <div class="form-group">
                <label for="autonomy">Autonomie (optionnel)</label>
                <input type="text" class="form-control" id="autonomy" name="autonomy"
                       placeholder="Autonomie ">
            </div>
            <div class="form-group">
                <label for="frame_size">Taille du cadre (optionnel)</label>
                <input type="text" class="form-control" id="frame_size" name="frame_size"
                       placeholder="Taille du cadre">
            </div>
            <div class="form-group">
                <label for="created_date">Date de création (optionnel)</label>
                <input type="date" class="form-control" id="create_date" name="created_date"
                       placeholder="01/01/2020">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="text" class="form-control" id="image" name="image"
                       placeholder="https://exemple.com/image.jpg">
            </div>
            <div class=" form-group text-center">
                <button class=" btn btn-info ">Ajouter</button>
            </div>
        </form>
    </div>
{% endblock %}