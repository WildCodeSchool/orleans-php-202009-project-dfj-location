{% extends 'layout.html.twig' %}

{% block title %} {{ parent() }} {% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/form.css">
{% endblock %}

{% block content %}
    <div class="container-fluid">
    <div class="row">
    {% for bicycle in bicycles %}
        <div class="col-12 ">
            <span class="border-bottom-dark">
                <h1 class=" text-center my-5">{{ bicycle.name }}</h1>
            </span>

            <div class=" d-flex justify-content-center">
                <img class="h-50 w-50 justify-content-center " src="{{ bicycle.image }}" alt="{{ bicycle.name }}">
            </div>
            <div class="col-12 offset-3 col-md-7 pt-3">{{ bicycle.description }}</div>
        </div>
        <div class="col-12 col-md-6">
        <h2 class="text-center pt-5 pb-3">Caractéristiques</h2>
        <table class="table table-striped table-bordered table-hover">
            <tbody>
            <tr>
                <th scope="row">Poids</th>
                <td>{{ bicycle.weight }} kg</td>
            </tr>
            <tr>
                <th scope="row">Charge maximal</th>
                <td>{{ bicycle.maximum_charge }}</td>
            </tr>
            <tr>
                <th scope="row">Autonomie</th>
                <td>{{ bicycle.autonomy }}</td>
            </tr>
            <tr>
                <th scope="row">Taille du cadre</th>
                <td>{{ bicycle.frame_size }}</td>
            </tr>
            <tr>

            </tr>
            </tbody>
        </table>
        </div>
        <div class="col-12 col-md-6">
            <h2 class="text-center pt-5 pb-3">Tarifs</h2>
            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th scope="col">Durée</th>
                    <th scope="col">Prix</th>
                </tr>
                </thead>
                <tbody>
                {% for price in prices %}
                    <tr>
                        <td>{{ price.name }} </td>
                        <td>{{ price.price }} €</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
        <div class="my-1 text-center">
            <a href="/reservation/booking/{{ bicycle.id }}" class="btn">Réserver</a>
        </div>
        </div>
    {% endfor %}
    </div>
    </div>
{% endblock %}